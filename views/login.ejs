<% include _header%>

    <div class="container-fluid">
        <div class="row content">
            <div class="col-sm-3"></div>
            <div class="col-sm-6">
                <div>
                    <form action="/login" method="post" name="Login_Form" class="form-signin">
                        <h3 class="form-signin-heading">Xin Chào! Vui Lòng Đăng Nhập</h3>
                        <% if (message.length > 0) { %>
                            <div class="alert alert-danger">
                                <p style="text-align: center"><%= message %></p>
                            </div>
                            <% } %>
                        <h4 style="color: red; font-size: 15px"></h4>
                        <hr class="colorgraph">
                        <input type="text" class="form-login form-control" name="username" placeholder="Tên đăng nhập" required="" autofocus="" />
                        <input type="password" class="form-login form-control" name="password" placeholder="Mật khẩu" required="" />
                        <input class="btn btn-lg btn-primary btn-block" name="Submit" type="submit" value="Đăng nhập" style="background-color: green;"
                        />
                        <a href="forgotPassword.jsp">Quên mật khẩu?</a>
                        <input class="btn btn-lg btn-primary btn-block" name="Submit" type="button" value="Tạo tài khoản mới" onclick="location.href='/signup';"
                        />
                    </form>
                </div>
            </div>
        </div>
    </div>

            </body>
            <% include _footer%>