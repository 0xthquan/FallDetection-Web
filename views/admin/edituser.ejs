<link href="/css/bootstrap.min.css" rel="stylesheet">
<link href="style.css" rel="stylesheet">
<link rel="manifest" href="manifest.json">
<script src="/js/jquery.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/firebase/firebase-app.js"></script>
<script src="/firebase/firebase.js"></script>
<script src="/firebase/firebase-messaging.js"></script>

<body style="background: rgb(236, 236, 236)">


    <div class="container" style="margin-top: 0;">
        <form method="POST" action="/edit?user=<%=user.username%>" class="form-horizontal" id="tab">
            <fieldset>


                <!-- Text input-->
                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="textinput">Tên khách hàng</label>
                    <div class="col-md-4">
                        <input id="textinput" name="name" type="text" value="<%=user.name%>" class="form-control input-md">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" for="textinput">Mật khẩu</label>
                    <div class="col-md-4">
                        <input id="textinput" name="password" type="text" value="" class="form-control input-md">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" for="textinput">Email</label>
                    <div class="col-md-4">
                        <input id="textinput" name="email" type="text" value="<%=user.email%>" class="form-control input-md">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" for="textinput">Số điện thoại</label>
                    <div class="col-md-4">
                        <input id="textinput" name="phone_number" type="text" value="<%=user.phone_number%>" class="form-control input-md">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label" for="textinput">Địa chỉ</label>
                    <div class="col-md-4">
                        <input id="textinput" name="address" type="text" value="<%=user.address%>" class="form-control input-md">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label" for="singlebutton"></label>
                    <div class="col-md-4">
                        <button id="singlebutton" name="singlebutton" class="btn btn-primary">Cập nhật</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>

</body>