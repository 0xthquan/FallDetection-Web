<% include ../partials/__headerAdmin%>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">

    <link rel='stylesheet prefetch' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css'>

    <link rel="stylesheet" href="css/styleSignup.css">
    <div class="content-wrapper">
        <div class="container-fluid">
            <!-- /.container-fluid-->
            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                        <a href="/">Quản Trị</a>
                </li>
                <li class="breadcrumb-item active">Chỉnh sửa người dùng</li>
            </ol>

            <div id="myFormRegister" class="container">
                <form method="POST" action="/editUser?username=<%=account.username%>" class="form-horizontal" name="myForm" id="tab" onsubmit="return(validate());">
                    
                            <div class="row">
                                <h4>Tài khoản</h4>
                                <div id="input-signup" class="input-group">
                                        <input name="name" value="<%=account.name%>" type="text" placeholder="Họ và tên" />
                                    </div>
                                <div id="input-signup" class="input-group input-group-icon">
                                    <input name="password" value="" type="password" placeholder="Mật khẩu" />
                                    <div class="input-icon">
                                        <i class="fa fa-key"></i>
                                    </div>
                                </div>
                                
                               
                                <div id="input-signup" class="input-group input-group-icon">
                                    <input name="email" value="<%=account.email%>"  type="email" placeholder="Email" />
                                    <div class="input-icon">
                                        <i class="fa fa-envelope"></i>
                                    </div>
                                </div>
                                <div id="input-signup" class="input-group input-group-icon">
                                    <input  name="address" value="<%=account.address%>" type="address" placeholder="Địa chỉ" />
                                    <div class="input-icon">
                                        <i class="fa fa-location-arrow"></i>
                                    </div>
                                </div>
                                <div id="input-signup" class="input-group input-group-icon">
                                    <input name="phone_number" value="<%=account.phone_number%>" type="address" placeholder="Số điện thoai" />
                                    <div class="input-icon">
                                        <i class="fa fa-phone"></i>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div id="input-signup" class="input-group">
                                    <input style="background-color: #7ed321; color: white; font-weight: bold" type="submit" value="Cập nhật" />
                                </div>
                            </div>
                </form>
            </div>
        </div>
        <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>




        <!-- /.content-wrapper-->
        <% include ../partials/__footerAdmin%>