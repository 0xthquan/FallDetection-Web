<% include ../partials/__headerAdmin%>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">

  <link rel='stylesheet prefetch' href='http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css'>

  <link rel="stylesheet" href="css/styleSignup.css">
  <div class="content-wrapper">
    <div class="container-fluid">
      <!-- /.container-fluid-->
      <!-- Breadcrumbs-->
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="/">Quản Trị</a>
        </li>
        <li class="breadcrumb-item active">Tạo tài khoản mới</li>
      </ol>
     
      <div id="myFormRegister" class="container">
        <form id="formRegister" method="POST" action="signup" class="form-horizontal" name="myForm" id="tab" onsubmit="return(validate());">
          <% if (message.length > 0) { %>
            <div class="alert alert-danger">
              <p style="text-align: center">
                <%= message %>
              </p>
            </div>
            <% } %>
              <div class="row">
                <h4>Tạo tài khoản</h4>
                <div id="input-signup" class="input-group input-group-icon">
                  <input name="username" type="text" placeholder="Tên đăng nhập" />
                  <div class="input-icon">
                    <i class="fa fa-user"></i>
                  </div>
                </div>
                <div id="input-signup" class="input-group input-group-icon">
                  <input name="password" type="password" placeholder="Mật khẩu" />
                  <div class="input-icon">
                    <i class="fa fa-key"></i>
                  </div>
                </div>
                <div id="input-signup" class="input-group input-group-icon">
                  <input name="confirm_password" type="password" placeholder="Xác thực lại mật khẩu" />
                  <div class="input-icon">
                    <i class="fa fa-key"></i>
                  </div>
                </div>
                <div id="input-signup" class="input-group">
                  <input name="name" type="text" placeholder="Họ và tên" />
                </div>
                <div id="input-signup" class="input-group input-group-icon">
                  <input name="email" type="email" placeholder="Email" />
                  <div class="input-icon">
                    <i class="fa fa-envelope"></i>
                  </div>
                </div>
                <div id="input-signup" class="input-group input-group-icon">
                  <input name="address" type="address" placeholder="Địa chỉ" />
                  <div class="input-icon">
                    <i class="fa fa-location-arrow"></i>
                  </div>
                </div>
                <div id="input-signup" class="input-group input-group-icon">
                  <input name="phone_number" type="address" placeholder="Số điện thoai" />
                  <div class="input-icon">
                    <i class="fa fa-phone"></i>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-half">
                  <h4>Loại tài khoản</h4>
                  <div id="input-signup" class="input-group">
                    <input type="radio" name="role" value="user" id="gender-male" />
                    <label for="gender-male">User</label>
                    <input type="radio" name="role" value="admin" id="gender-female" />
                    <label for="gender-female">Admin</label>
                  </div>
                </div>
                <div class="col-half">
                  <h4>Ngày đăng ký</h4>
                  <div id="input-signup" class="input-group">
                    <input id="datepicker" name="register_date" type="address" placeholder="" readonly="true" />
                  </div>
                </div>

              </div>
              <div class="row">
                <div id="input-signup" class="input-group">
                  <input style="font-weight: bold;font-size: 20px;background-color:  #7ed321; color: white" type="submit" value="Đăng ký" />
                </div>
              </div>
        </form>
      </div>
    </div>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>

    <script>
      var today = new Date();
      var dd = today.getDate();
      var mm = today.getMonth() + 1; //January is 0!

      var yyyy = today.getFullYear();
      if (dd < 10) {
        dd = '0' + dd;
      }
      if (mm < 10) {
        mm = '0' + mm;
      }
      var today = dd + '/' + mm + '/' + yyyy;
      document.getElementById("datepicker").value = today;
    </script>


    <!-- /.content-wrapper-->
    <% include ../partials/__footerAdmin%>