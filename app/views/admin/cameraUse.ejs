<% include ../partials/__headerAdmin%>
    <script src="/js/camera.js"></script>

    <div class="content-wrapper">
        <div class="container-fluid">
            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                        <a href="/">Quản Trị</a>
                </li>
                <li class="breadcrumb-item active">Camera sử dụng</li>
            </ol>
            <!-- Example DataTables Card-->
            <div class="card mb-3">

                <div class="card-body" style="padding-left: 0px; padding-right: 0px; padding-top: 0px"></div>

                <div id="dataTable_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                    <h4 style="color: navy;">User:
                        <%=account_username%>
                    </h4>
                    <div class="row">
                        <div class="col-sm-12" style="padding-left: 0px;padding-right: 0px;">
                            <div id="dataTable_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                                <div class="row">
                                    <div class="col-sm-12" style="padding-left: 0px;padding-right: 0px;">
                                        <div id="dataTable_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                                            <div class="row">
                                                <div class="col-sm-12" style="padding-left: 0px !important;padding-right: 0px !important;">
                                                    <table class="table table-bordered dataTable" id="dataTable" role="grid" aria-describedby="dataTable_info" style="width: 100%; font-size: 16px;"
                                                        width="100%" cellspacing="0">
                                                        <thead>
                                                            <tr role="row">
                                                                <th tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 20px;" aria-label="Name: activate to sort column descending"
                                                                    class="sorting_asc" aria-sort="ascending">ID Camera</th>
                                                                <th tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 100px;" aria-label="Position: activate to sort column ascending"
                                                                    class="sorting">IP Address</th>
                                                                <th tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 40px;" aria-label="Office: activate to sort column ascending"
                                                                    class="sorting">Port</th>
                                                                <th tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 150px;" aria-label="Age: activate to sort column ascending"
                                                                    class="sorting">Mô tả</th>
                                                                <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 10px;" aria-label="Salary: activate to sort column ascending">Sửa</th>
                                                                <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 10px;" aria-label="Salary: activate to sort column ascending">Xóa</th>
                                                            </tr>
                                                        </thead>

                                                        <tbody>
                                                            <%
                                    for (var i = 0; i < list_camera.length; i++) {
                                %>

                                                                <tr role="row">
                                                                    <td class="sorting_1">
                                                                        <%=list_camera[i].id_camera %>
                                                                    </td>
                                                                    <td>
                                                                        <%=list_camera[i].ip_address %>
                                                                    </td>
                                                                    <td>
                                                                        <%=list_camera[i].port %>
                                                                    </td>
                                                                    <td>
                                                                        <%=list_camera[i].description %>
                                                                    </td>
                                                                    <td>
                                                                        <a href="editcamera?id=<%= list_camera[i].id_camera%>">
                                                                            <i class="fa fa-fw fa-edit"></i>
                                                                            <span class="nav-link-text">Sửa</span>
                                                                        </a>
                                                                    </td>
                                                                    <td>
                                                                        <a href="" onclick="removeCamera('<%= list_camera[i].id_camera%>', '<%= account_username%>')">
                                                                            <i class="fa fa-fw fa-trash"></i>
                                                                            <span class="nav-link-text">Xóa</span>
                                                                        </a>
                                                                    </td>
                                                                </tr>
                                                                <%
                                }
                            %>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
    <!-- /.container-fluid-->
    <% include ../partials/__footerAdmin%>